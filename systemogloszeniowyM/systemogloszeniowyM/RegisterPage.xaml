<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="systemogloszeniowyM.RegisterPage"
             NavigationPage.HasNavigationBar="False">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Podaj Email:"/>
            <Entry x:Name="emailEntry"/>
            <Label Text="Podaj Hasło"/>
            <Entry x:Name="hasloEntry" IsPassword="True"/>
            <Label Text="Powtorz Haslo"/>
            <Entry x:Name="powtorzhasloEntry" IsPassword="True"/>
            <Button Text="Zarejestruj się" Clicked="Zarejestruj"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>