<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="systemogloszeniowyM.LoginPage"
             NavigationPage.HasNavigationBar="False">
    <ContentPage.Content>
        <StackLayout>
            <Label HorizontalOptions="Center" FontSize="Large" Text="Strona Logowania Uzytkownika" Margin="0,0,0,60"/>
            <Label Text="Podaj Email:"/>
            <Entry x:Name="emailEntry"/>
            <Label Text="Podaj Hasło"/>
            <Entry x:Name="hasloEntry"/>
            <StackLayout Margin="0,50,0,0">
                <Button Text="Zaloguj" Clicked="Zaloguj"/>
                <Label Text="Nie masz konta? Zarejestruj się!" Margin="0,50,0,0" HorizontalOptions="Center"/>
                <Button Text="Zarejestruj się" Clicked="NawigacjaRejestracja" BackgroundColor="Transparent" VerticalOptions="End"/>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>